<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<span><%= book.body %></span>
<%= link_to 'Show', book_path(book.id) %>
<%= link_to 'Edit', edit_book_path(book.id) %>

<% end %>

<h4>New Book</h4>
<%= form_with model: @book do |f| %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>. 

<% end %>